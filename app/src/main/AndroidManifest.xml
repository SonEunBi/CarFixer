<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.vehicle1">

<!--    다른 앱 파일을 접근할 때-->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <!--사진 권한 지정-->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />
<!--카메라 권한 지정-->
    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />
    <uses-permission android:name="android.permission.CAMERA" />
    <!--인터넷 사용권한 지정 & 파이어베이스 사용-->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Vehicle1"
        android:usesCleartextTraffic="true">
        <!--        usesClear = http통신 가능하게 만드는 설정-->
        <!--처음에 뜨는 화면 설정-->
        <activity

            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Vehicle1.NoActionBar">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PhotoActivity"
            android:label="Camera"
            android:exported="true"
            android:theme="@style/Theme.Vehicle1"></activity>

        <activity
            android:name=".CalendarActivity"
            android:label="Calendar"
            android:theme="@style/Theme.Vehicle1"></activity>
<!--        android:exported="true" - fileprovider를 앱 외부에서도 사용 가능-->
<!--        android:exported="true"로 했더니 앱이 안 켜짐-->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.example.vehicle1.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
        <!-- .fileprovider-->
    </application>

</manifest>